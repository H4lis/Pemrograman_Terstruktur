#include <iostream>
using namespace std;

void segitiga(int n);
void segitiga(int n, int m);

int main(){

	for (int i=1; i<= 4 ; i++){
		segitiga(6);
		segitiga(6,1);
	}
}
void segitiga(int n){
	for (int i=1 ; i <=n ; i++){
		for( int j=n ; j >= i ; j--){
			cout << " ";
		}
		for( int J=1 ; J<=(2*i-1); J++ ){
			if(i %2 == 1){
				cout << "A";
			}else{
				cout << "B";
			}
		}
		cout << endl;
	}
}
void segitiga(int n, int m){
	for (int i=2 ; i <=(n-m) ; i++){
		for(int j=1 ; j<=i ; j++){
			cout << " ";
		}
		for (int J=n ; J>= (2*i-n) ; J--){
			if(i%2 == 1){
				cout << "D";
			}else{
				cout << "C";
			}
		}
		cout << endl;
	}
}
